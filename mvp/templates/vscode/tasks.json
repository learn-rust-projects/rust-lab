{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clippy Fix Now",
            "type": "shell",
            "command": "cargo clippy --fix --allow-dirty",
            "group": {
                // VS Code internally binds "build tasks" to Ctrl+Shift+B.
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$rustc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
